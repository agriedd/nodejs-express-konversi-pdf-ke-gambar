html
    head
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css", integrity="sha384-DhY6onE6f3zzKbjUPRc2hOzGAdEf4/Dz+WJwBvEYL/lkkIsI3ihufq9hk9K4lVoK", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js", integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD", crossorigin="anonymous")
    body
        div.bg-white.border-bottom.p-3.position-sticky.d-flex.shadow-sm(style="top: 0px;")
            .mx-auto(style="max-width: 400px")
                form(action="/upload" method="POST" enctype="multipart/form-data").mb-0
                    .input-group
                        input(type="file" name="file").form-control
                        button(type="submit").btn.btn-outline-primary Upload
        div
            - let regex = RegExp(`${dirname}`);
            if list && list.length
                .p-3.d-flex.justify-content-center
                    ul.list-group(style="max-width: 800px")
                        each img in list
                            li.list-group-item.shadow-sm
                                - console.log(dirname);
                                - console.log(img.basename);
                                - let img_path = img.basename.replace(regex, "");
                                img(src=host + `/${img_path}`, alt="", height="100%", width="auto").img-fluid
            else
                .p-3
                    div.alert.alert-danger Masih kosong, silahkan upload file pdf
            